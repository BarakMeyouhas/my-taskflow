<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <rule name="StaticContent">
          <conditions>
            <add input="{REQUEST_URI}" pattern="^/\.next/static/" />
          </conditions>
          <action type="Rewrite" url="{REQUEST_URI}" />
        </rule>
        <rule name="PublicFiles">
          <conditions>
            <add input="{REQUEST_URI}" pattern="^/public/" />
          </conditions>
          <action type="Rewrite" url="{REQUEST_URI}" />
        </rule>
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="server.js"/>
        </rule>
      </rules>
    </rewrite>
    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin"/>
        </hiddenSegments>
      </requestFiltering>
    </security>
    <httpErrors existingResponse="PassThrough" />
    <defaultDocument>
      <files>
        <clear/>
        <add value="server.js"/>
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>
